<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_header_selector"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/btn_roate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:src="@drawable/ic_search_black_24dp"
            android:background="#00ffffff"/>
        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="약 꾹"
            android:textColor="#ffffff"
            android:textSize="30sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text=" 세상에서 가장 작은 약국 " />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="50dp">

                <ImageButton
                    android:id="@+id/ImageButton"
                    android:layout_width="64dp"
                    android:layout_height="67dp"
                    android:elevation="30dp"
                    android:background="@drawable/mainbutton_state"
                    android:src="@drawable/ic_search_black_24dp" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/finddrugname"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingRight="50dp">

                <ImageButton
                    android:id="@+id/shapeButton"
                    android:layout_width="64dp"
                    android:layout_height="67dp"
                    android:elevation="30dp"
                    android:background="@drawable/mainbutton_state"
                    android:src="@drawable/ic_note_add_black_24dp" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/finddrugshape"
                    android:textSize="15sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_weight="0.3">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:elevation="30dp"
                android:gravity="center"
                android:paddingLeft="50dp"
                android:layout_weight="1">
                <ImageButton
                    android:id="@+id/reviewButton"
                    android:layout_width="64dp"
                    android:layout_height="67dp"
                    android:background="@drawable/mainbutton_state"
                    android:src="@drawable/ic_view_list_black_24dp" />
                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/review"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingRight="50dp"
                android:layout_weight="1">
                <ImageButton
                    android:id="@+id/mapButton"
                    android:layout_width="64dp"
                    android:layout_height="67dp"
                    android:elevation="30dp"
                    android:background="@drawable/mainbutton_state"
                    android:src="@drawable/ic_add_location_black_24dp" />
                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/drugmap"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingLeft="50dp"
                android:layout_weight="1">
                <ImageButton
                    android:id="@+id/dan"
                    android:layout_width="64dp"
                    android:layout_height="67dp"
                    android:elevation="30dp"
                    android:background="@drawable/mainbutton_state"
                    android:src="@drawable/ic_view_list_black_24dp" />
                <TextView
                    android:id="@+id/textView_dan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="다은"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingRight="50dp"
                android:layout_weight="1">
                <ImageButton
                    android:id="@+id/btn_recom"
                    android:layout_width="64dp"
                    android:layout_height="67dp"
                    android:elevation="30dp"
                    android:background="@drawable/mainbutton_state"
                    android:src="@drawable/ic_add_location_black_24dp" />
                <TextView
                    android:id="@+id/textView_song"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="민송"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>




</FrameLayout>
